<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_ping_jia"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.overseas.overseas.mine.PingJiaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/shihuangse"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:padding="15dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_pingjia_title"
            android:textColor="#fff"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:padding="13dp"/>
    </LinearLayout>
    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/huise">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_liebiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#fff">
        </android.support.v7.widget.RecyclerView>
    </com.liaoinstan.springview.widget.SpringView>
    <TextView
        android:id="@+id/tv_noContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/zanwugengduoshuju"
        android:textColor="@color/text_black"
        android:visibility="gone"/>
</LinearLayout>
