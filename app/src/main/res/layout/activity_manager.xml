<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zui_jin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.overseas.overseas.mine.ManagerActivity">

    <LinearLayout
        android:background="@color/shihuangse"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <ImageView
            android:id="@+id/back_img"
            android:padding="15dp"
            android:src="@drawable/back"
            android:layout_width="50dip"
            android:layout_height="50dip" />
        <TextView
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="@string/activity_manager_title"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:padding="13dp"
            android:layout_width="50dip"
            android:layout_height="50dip" />
    </LinearLayout>
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/bg_layout"
            android:background="@drawable/manager_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="110dip">
            <com.overseas.overseas.view.CircleImageView
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dip"
                android:layout_width="45dip"
                android:src="@drawable/deful_touxiang"
                android:layout_height="45dip" />
            <TextView
                android:paddingLeft="10dip"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="15sp"
                android:text="杨金金"
                android:layout_weight="1"
                android:layout_marginTop="20dip"
                android:layout_width="0dip"
                android:layout_height="45dip" />
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/touming"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:layout_marginTop="20dip"
                android:layout_width="80dip"
                android:layout_height="40dip">
                <TextView
                    android:textColor="#ffc910"
                    android:textSize="12sp"
                    android:text="100%"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"/>
                <TextView
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:text="@string/activity_manager_huifulv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <!--中间突出-->
        <LinearLayout
            android:layout_marginTop="85dip"
            android:layout_marginRight="15dip"
            android:layout_marginLeft="15dip"
            android:background="@drawable/mine_bg"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="84dip"
            >
            <LinearLayout
                android:paddingTop="15dip"
                android:paddingBottom="15dip"
                android:paddingLeft="10dip"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <com.overseas.overseas.view.RatingBarView
                    android:id="@+id/ratingBarView"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1">
                    
                </com.overseas.overseas.view.RatingBarView>
                <TextView
                    android:textColor="#333"
                    android:gravity="center_vertical"
                    android:text="@string/activity_manager_zhuying"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="3个月"
                        android:textColor="@color/shihuangse"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="13sp"
                        android:text="@string/activity_manager_nianxian"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="6"
                        android:textColor="@color/shihuangse"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="13sp"
                        android:text="@string/activity_manager_people_count"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--下方切换-->
        <LinearLayout
            android:layout_marginTop="65dip"
            android:orientation="vertical"
            android:layout_below="@+id/bg_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:id="@+id/rg_look"
                android:layout_width="130dip"
                android:layout_height="35dip"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/all_shop"
                    style="@style/buy_below_style"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/activity_manager_zaishoufang"
                    />
                <RadioButton
                    android:id="@+id/rb_pifu"
                    style="@style/buy_below_style"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/activity_manager_zaizufang"
                    />
            </RadioGroup>
            <LinearLayout
                android:layout_width="130dip"
                android:layout_height="10dip">
                <View
                    android:id="@+id/view_shoufang"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@color/shihuangse"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="2dip"></View>
                <View
                    android:visibility="invisible"
                    android:id="@+id/view_zufang"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@color/shihuangse"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="2dip"></View>
            </LinearLayout>
            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dip"></View>
            <com.overseas.overseas.view.NoCacheViewPager
                android:id="@+id/vp_look"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.overseas.overseas.view.NoCacheViewPager>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
