<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="#fff"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal">
        <com.overseas.overseas.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dip"
            android:src="@drawable/deful_touxiang"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="简小姐"
            android:textColor="#222"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2018.1.11"
            android:textColor="#999"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_haoping"
            android:layout_width="70dip"
            android:layout_height="25dip"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/round_red"
            android:gravity="center"
            android:text="@string/haoping"
            android:textColor="@color/shihuangse"
            android:textSize="14sp"/>
    </LinearLayout>
    <com.overseas.overseas.view.LetterSpacingTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dip"
        android:layout_marginTop="5dip"
        android:lineSpacingExtra="5dp"
        android:paddingRight="15dip"
        android:textColor="#333"
        android:textSize="15sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dip"
        android:background="#eee"></View>
</LinearLayout>