<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lishi_new_house"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.overseas.overseas.mine.LishiShangyeActivity">
    <com.overseas.overseas.view.VerticalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/shihuangse"
                android:layout_width="match_parent"
                android:layout_height="255dip">
                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_vidio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v4.view.ViewPager>
                <ImageView
                    android:layout_marginTop="10dip"
                    android:id="@+id/img_back"
                    android:padding="15dip"
                    android:src="@drawable/back"
                    android:layout_width="50dip"
                    android:layout_height="50dip" />
                <ImageView
                    android:layout_marginTop="10dip"
                    android:id="@+id/img_share"
                    android:layout_alignParentRight="true"
                    android:padding="14dip"
                    android:src="@drawable/shar"
                    android:layout_width="50dip"
                    android:layout_height="50dip" />
                <ImageView
                    android:layout_marginTop="10dip"
                    android:id="@+id/img_start"
                    android:layout_marginRight="50dp"
                    android:layout_alignParentRight="true"
                    android:padding="14dip"
                    android:src="@drawable/shoucang"
                    android:layout_width="50dip"
                    android:layout_height="50dip" />
                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip">
                    <ImageView
                        android:src="@drawable/touming"
                        android:layout_width="65dip"
                        android:layout_height="50dip" />
                    <TextView
                        android:id="@+id/tv_to_num"
                        android:textColor="#fff"
                        android:layout_marginLeft="15dp"
                        android:text="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_suiyi"
                        android:layout_marginLeft="5dip"
                        android:layout_toRightOf="@id/tv_to_num"
                        android:textColor="#fff"
                        android:text="/"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_toRightOf="@id/tv_suiyi"
                        android:id="@+id/tv_all_num"
                        android:textColor="#fff"
                        android:layout_marginLeft="5dp"
                        android:text="10"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dip">
                <TextView
                    android:paddingLeft="15dip"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:text="泰和·金府大厦"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <View
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dip"></View>
            <LinearLayout
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dip">
                <TextView
                    android:paddingLeft="15dip"
                    android:gravity="center_vertical"
                    android:text="@string/activity_details_price"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@color/shihuangse"
                    android:paddingLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="17500元/㎡"
                    android:textSize="14sp"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dip">
                <TextView
                    android:paddingLeft="15dip"
                    android:gravity="center_vertical"
                    android:text="@string/activity_details_mianji"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="#333"
                    android:paddingLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="175㎡"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:layout_marginRight="15dip"
                android:layout_marginLeft="15dip"
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dip"></View>
            <LinearLayout
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dip">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    android:src="@drawable/dingwei"
                    android:layout_width="15dip"
                    android:layout_height="15dip" />
                <TextView
                    android:textColor="#333"
                    android:paddingLeft="5dip"
                    android:gravity="center_vertical"
                    android:text="东京-西马地铁口200米"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="15dip"
                android:background="#fff6f2"
                android:id="@+id/tv_See_More"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginRight="15dip"
                android:gravity="center"
                android:paddingLeft="15dip"
                android:text="@string/see_more"
                android:textColor="@color/shihuangse"
                android:layout_marginBottom="20dp"
                android:textSize="15sp" />

            <View
                android:layout_marginRight="15dip"
                android:layout_marginLeft="15dip"
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dip"></View>
            <TextView
                android:background="#fff"
                android:paddingLeft="15dip"
                android:gravity="center_vertical"
                android:text="@string/activity_details_huxing"
                android:layout_width="match_parent"
                android:layout_height="45dip" />

            <android.support.v7.widget.RecyclerView
                android:background="#fff"
                android:id="@+id/Huxing_Recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

            <TextView
                android:paddingLeft="20dip"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="#333"
                android:text="@string/activity_details_zhoubian"
                android:layout_width="match_parent"
                android:layout_height="50dip" />
            <LinearLayout
                android:background="@drawable/bg_map"
                android:layout_width="match_parent"
                android:layout_height="120dip">
                <com.baidu.mapapi.map.MapView
                    android:id="@+id/bmapView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clickable="true" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dip">
                <LinearLayout
                    android:id="@+id/shop_layout"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/shangchang"
                        android:layout_width="25dip"
                        android:layout_height="25dip" />
                    <TextView
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="@string/activity_details_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/school_layout"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/xuexiao"
                        android:layout_width="25dip"
                        android:layout_height="25dip" />
                    <TextView
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="@string/activity_details_school"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/youeryuan_layout"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/youeryuan"
                        android:layout_width="25dip"
                        android:layout_height="25dip" />
                    <TextView
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="@string/activity_details_youeryuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/yiyuan_layout"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/yiyuan"
                        android:layout_width="25dip"
                        android:layout_height="25dip" />
                    <TextView
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="@string/activity_details_yiyuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="5dip"></View>
        </LinearLayout>
    </com.overseas.overseas.view.VerticalScrollView>
</LinearLayout>
